<h2 align="center">	Title: <%= @article.title %></h2>

<div class="col-xs-8">
	<center><h4><strong>Description</strong></h4></center>
	<hr>
	<%= simple_format(@article.description) %>
</div>
<div class="atricle-actions">
	<%= link_to "Back to article", articles_path, class: "btn btn-success" %> | 
	<%= link_to "Edit article", edit_article_path(@article), class: "btn btn-primary"  %> | 
	<%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger"%>
</div>
